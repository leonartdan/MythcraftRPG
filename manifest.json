{
  "id": "mythcraft",
  "title": "MythCraft RPG",
  "description": "An implementation of the MythCraft RPG system for Foundry VTT, featuring Action Point-based combat, complex character creation, and d20 mechanics.",
  "version": "1.0.0",
  "authors": [
    {
      "name": "Your Name",
      "email": "your.email@example.com"
    }
  ],
  "compatibility": {
    "minimum": "11",
    "verified": "12",
    "maximum": "12"
  },
  "esmodules": [
    "scripts/mythcraft.mjs"
  ],
  "styles": [
    "styles/mythcraft.css"
  ],
  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "lang/en.json"
    }
  ],
  "documentTypes": {
    "Actor": {
      "character": {
        "htmlFields": ["biography.value", "background.description", "notes"]
      },
      "npc": {
        "htmlFields": ["biography.value", "notes"]
      }
    },
    "Item": {
      "weapon": {},
      "armor": {},
      "equipment": {},
      "talent": {
        "htmlFields": ["description"]
      },
      "spell": {
        "htmlFields": ["description"]
      },
      "skill": {}
    }
  },
  "gridDistance": 5,
  "gridUnits": "ft",
  "primaryTokenAttribute": "health.value",
  "secondaryTokenAttribute": "actionPoints.value",
  "url": "https://github.com/yourusername/mythcraft-foundry",
  "manifest": "https://github.com/yourusername/mythcraft-foundry/releases/latest/download/system.json",
  "download": "https://github.com/yourusername/mythcraft-foundry/releases/latest/download/mythcraft.zip",
  "license": "LICENSE",
  "readme": "README.md",
  "bugs": "https://github.com/yourusername/mythcraft-foundry/issues",
  "changelog": "CHANGELOG.md"
}