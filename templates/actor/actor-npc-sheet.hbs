<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="NPC Name"/></h1>
      <div class="grid grid-3col">
        <div class="resource">
          <label class="resource-label">Challenge Rating</label>
          <input type="number" name="system.cr.value" value="{{system.cr.value}}" data-dtype="Number"/>
        </div>
        <div class="resource">
          <label class="resource-label">Type</label>
          <input type="text" name="system.type.value" value="{{system.type.value}}" placeholder="humanoid"/>
        </div>
        <div class="resource">
          <label class="resource-label">Size</label>
          <select name="system.size.value">
            <option value="tiny" {{selected "tiny" system.size.value}}>Tiny</option>
            <option value="small" {{selected "small" system.size.value}}>Small</option>
            <option value="medium" {{selected "medium" system.size.value}}>Medium</option>
            <option value="large" {{selected "large" system.size.value}}>Large</option>
            <option value="huge" {{selected "huge" system.size.value}}>Huge</option>
            <option value="gargantuan" {{selected "gargantuan" system.size.value}}>Gargantuan</option>
          </select>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="abilities">Abilities</a>
    <a class="item" data-tab="inventory">Inventory</a>
    <a class="item" data-tab="spells">Spells</a>
    <a class="item" data-tab="biography">Notes</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    
    {{!-- Abilities Tab --}}
    <div class="tab abilities" data-group="primary" data-tab="abilities">
      
      {{!-- Core Stats --}}
      <div class="grid grid-3col">
        {{!-- Health --}}
        <div class="resource health">
          <label class="resource-label">Health</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="number" name="system.health.value" value="{{system.health.value}}" data-dtype="Number"/>
            <span> / </span>
            <input type="number" name="system.health.max" value="{{system.health.max}}" data-dtype="Number"/>
          </div>
          <div class="resource-content">
            <label>Temp HP:</label>
            <input type="number" name="system.health.temp" value="{{system.health.temp}}" data-dtype="Number"/>
          </div>
        </div>

        {{!-- Action Points --}}
        <div class="resource action-points">
          <label class="resource-label">Action Points</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="number" name="system.actionPoints.value" value="{{system.actionPoints.value}}" data-dtype="Number"/>
            <span> / </span>
            <input type="number" name="system.actionPoints.max" value="{{system.actionPoints.max}}" data-dtype="Number"/>
          </div>
          <div class="resource-actions">
            <button type="button" class="ap-spend" data-cost="1">Spend 1</button>
            <button type="button" class="ap-rest" data-rest-type="short">Short Rest</button>
            <button type="button" class="ap-rest" data-rest-type="long">Long Rest</button>
          </div>
        </div>

        {{!-- Speed --}}
        <div class="resource speed">
          <label class="resource-label">Speed</label>
          <div class="resource-content">
            <input type="number" name="system.speed.value" value="{{system.speed.value}}" data-dtype="Number"/>
            <span>{{system.speed.units}}</span>
          </div>
        </div>
      </div>

      {{!-- Attributes --}}
      <div class="attributes">
        <h3>Attributes</h3>
        <div class="grid grid-4col">
          {{#each system.attributes as |attribute key|}}
          <div class="attribute flexrow flex-group-center">
            <label for="system.attributes.{{key}}.value" class="resource-label">{{capitalize key}}</label>
            <input type="number" name="system.attributes.{{key}}.value" value="{{attribute.value}}" data-dtype="Number"/>
            <span class="attribute-mod">{{numberFormat attribute.mod decimals=0 sign=true}}</span>
            <a class="attribute-roll rollable" data-attribute="{{key}}" title="Roll {{capitalize key}}">
              <i class="fas fa-dice-d20"></i>
            </a>
          </div>
          {{/each}}
        </div>
      </div>

      {{!-- Defenses --}}
      <div class="defenses">
        <h3>Defenses</h3>
        <div class="grid grid-3col">
          <div class="defense">
            <label>Physical Defense</label>
            <span class="defense-value">{{system.defenses.physical.value}}</span>
            <input type="number" name="system.defenses.physical.bonus" value="{{system.defenses.physical.bonus}}" data-dtype="Number" placeholder="Bonus"/>
          </div>
          <div class="defense">
            <label>Mental Defense</label>
            <span class="defense-value">{{system.defenses.mental.value}}</span>
            <input type="number" name="system.defenses.mental.bonus" value="{{system.defenses.mental.bonus}}" data-dtype="Number" placeholder="Bonus"/>
          </div>
          <div class="defense">
            <label>Social Defense</label>
            <span class="defense-value">{{system.defenses.social.value}}</span>
            <input type="number" name="system.defenses.social.bonus" value="{{system.defenses.social.bonus}}" data-dtype="Number" placeholder="Bonus"/>
          </div>
        </div>
      </div>

      {{!-- Special Abilities --}}
      <div class="talents">
        <h3 class="items-header">
          <span>Special Abilities</span>
          <a class="item-control item-create" data-type="talent" title="Create ability">
            <i class="fas fa-plus"></i>
          </a>
        </h3>
        <ol class="items-list">
          {{#each talents as |item id|}}
          <li class="item flexrow" data-item-id="{{item._id}}">
            <div class="item-name">
              <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
              <h4>{{item.name}}</h4>
            </div>
            <div class="item-controls">
              <a class="item-control item-roll" data-roll-type="talent" title="Use ability"><i class="fas fa-magic"></i></a>
              <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
              <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
          </li>
          {{/each}}
        </ol>
      </div>

    </div>

    {{!-- Inventory Tab --}}
    <div class="tab inventory" data-group="primary" data-tab="inventory">
      
      {{!-- Weapons --}}
      <div class="weapons">
        <h3 class="items-header">
          <span>Weapons</span>
          <a class="item-control item-create" data-type="weapon" title="Create weapon">
            <i class="fas fa-plus"></i>
          </a>
        </h3>
        <ol class="items-list">
          <li class="item flexrow item-header">
            <div class="item-name">Name</div>
            <div class="item-controls">Damage</div>
            <div class="item-controls">Range</div>
            <div class="item-controls">AP</div>
            <div class="item-controls">Controls</div>
          </li>
          {{#each weapons as |item id|}}
          <li class="item flexrow" data-item-id="{{item._id}}">
            <div class="item-name">
              <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
              <h4>{{item.name}}</h4>
            </div>
            <div class="item-controls">
              {{#each item.system.damage.parts as |part|}}
                {{part.[0]}} {{part.[1]}}
              {{/each}}
            </div>
            <div class="item-controls">
              {{#if item.system.range.value}}{{item.system.range.value}}{{item.system.range.units}}{{/if}}
            </div>
            <div class="item-controls">{{item.system.actionCost}}</div>
            <div class="item-controls">
              <a class="item-control item-roll" data-roll-type="attack" title="Attack"><i class="fas fa-sword"></i></a>
              <a class="item-control item-roll" data-roll-type="damage" title="Damage"><i class="fas fa-tint"></i></a>
              <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
              <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
          </li>
          {{/each}}
        </ol>
      </div>

      {{!-- Equipment --}}
      <div class="equipment">
        <h3 class="items-header">
          <span>Equipment</span>
          <a class="item-control item-create" data-type="equipment" title="Create equipment">
            <i class="fas fa-plus"></i>
          </a>
        </h3>
        <ol class="items-list">
          {{#each gear as |item id|}}
          <li class="item flexrow" data-item-id="{{item._id}}">
            <div class="item-name">
              <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
              <h4>{{item.name}}</h4>
            </div>
            <div class="item-controls">
              Qty: {{item.system.quantity}}
            </div>
            <div class="item-controls">
              <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
              <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
          </li>
          {{/each}}
        </ol>
      </div>

    </div>

    {{!-- Spells Tab --}}
    <div class="tab spells" data-group="primary" data-tab="spells">
      <h3 class="items-header">
        <span>Spells & Abilities</span>
        <a class="item-control item-create" data-type="spell" title="Create spell">
          <i class="fas fa-plus"></i>
        </a>
      </h3>

      {{#each spells as |spellList source|}}
        {{#if spellList.length}}
        <div class="spell-list">
          <h4>{{capitalize source}} Spells</h4>
          <ol class="items-list">
            {{#each spellList as |item id|}}
            <li class="item flexrow" data-item-id="{{item._id}}">
              <div class="item-name">
                <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
                <h4>{{item.name}}</h4>
              </div>
              <div class="item-controls">
                Level {{item.system.level}}
              </div>
              <div class="item-controls">
                AP: {{item.system.actionCost}}
              </div>
              <div class="item-controls">
                <a class="item-control item-roll" data-roll-type="spell" title="Cast spell"><i class="fas fa-magic"></i></a>
                <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
              </div>
            </li>
            {{/each}}
          </ol>
        </div>
        {{/if}}
      {{/each}}
    </div>

    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="biography">
      <div class="form-group">
        <label>Notes & Description</label>
        {{editor system.notes target="system.notes" button=true owner=owner editable=editable}}
      </div>
    </div>

  </section>
</form>