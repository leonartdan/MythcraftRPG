<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <div class="header-grid">
      <div class="character-name">
        <input name="name" type="text" value="{{actor.name}}" placeholder="Character Name"/>
      </div>
      <div class="header-portrait">
        <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
      </div>
      <div class="header-field">
        <label class="resource-label">Level</label>
        <input type="number" name="system.level.value" value="{{system.level.value}}" data-dtype="Number"/>
      </div>
      <div class="header-field lineage">
        <label class="resource-label">Lineage</label>
        <input type="text" name="system.lineage.name" value="{{system.lineage.name}}" placeholder="Lineage"/>
        <input type="text" name="system.lineage.sublineage" value="{{system.lineage.sublineage}}" placeholder="Sublineage"/>
      </div>
      <div class="header-field background">
        <label class="resource-label">Background</label>
        <input type="text" name="system.background.name" value="{{system.background.name}}" placeholder="Background"/>
      </div>
      <div class="header-field profession">
        <label class="resource-label">Profession</label>
        <input type="text" name="system.profession.name" value="{{system.profession.name}}" placeholder="Profession"/>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="features">Features</a>
    <a class="item" data-tab="inventory">Inventory</a>
    <a class="item" data-tab="spells">Spells</a>
    <a class="item" data-tab="biography">Biography</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    
    {{!-- Features Tab --}}
    <div class="tab features" data-group="primary" data-tab="features">
      
      {{!-- Core Stats --}}
      <div class="grid grid-3col">
        {{!-- Health --}}
        <div class="resource health">
          <label class="resource-label">Health</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="number" name="system.health.value" value="{{system.health.value}}" data-dtype="Number"/>
            <span> / </span>
            <input type="number" name="system.health.max" value="{{system.health.max}}" data-dtype="Number"/>
          </div>
          <div class="resource-content">
            <label>Temp HP:</label>
            <input type="number" name="system.health.temp" value="{{system.health.temp}}" data-dtype="Number"/>
          </div>
          <div class="resource-content health-left-align">
            <label>Armor Rating:</label>
            <input type="number" name="system.health.armorRating" value="{{system.health.armorRating}}" data-dtype="Number"/>
          </div>
          <div class="resource-content health-left-align">
            <label>Shield:</label>
            <input type="number" name="system.health.shield" value="{{system.health.shield}}" data-dtype="Number"/>
          </div>
          <div class="resource-content health-left-align">
            <label>Death Points:</label>
            <input type="number" name="system.health.deathPoints" value="{{system.health.deathPoints}}" data-dtype="Number"/>
          </div>
        </div>

        {{!-- Action Points --}}
        <div class="resource action-points">
          <label class="resource-label">Action Points</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="number" name="system.actionPoints.value" value="{{system.actionPoints.value}}" data-dtype="Number"/>
            <span> / </span>
            <input type="number" name="system.actionPoints.max" value="{{system.actionPoints.max}}" data-dtype="Number"/>
          </div>
          <div class="resource-content">
            <label>Carried:</label>
            <input type="number" name="system.actionPoints.carried" value="{{system.actionPoints.carried}}" data-dtype="Number"/>
            <span> / {{system.actionPoints.carryLimit}}</span>
          </div>
          <div class="resource-content">
            <label>Max Carried:</label>
            <span>{{system.actionPoints.maxCarried}}</span>
          </div>
          <div class="resource-content">
            <label>Speed:</label>
            <input type="number" name="system.speed.value" value="{{system.speed.value}}" data-dtype="Number"/>
            <span>{{system.speed.units}}</span>
          </div>
          <div class="resource-actions">
            <button type="button" class="ap-spend" data-cost="1">Spend 1</button>
          </div>
        </div>

        {{!-- Initiative --}}
        <div class="resource initiative">
          <label class="resource-label">Initiative</label>
          <div class="resource-content">
            <div class="initiative-bonus">
              <label>Bonus:</label>
              <span>{{numberFormat system.initiative.bonus decimals=0 sign=true}}</span>
            </div>
            <button type="button" class="initiative-roll rollable">
              Roll Initiative
            </button>
          </div>
        </div>
      </div>

      {{!-- Attributes --}}
      <div class="attributes">
        <h3>Attributes</h3>
        <div class="grid grid-8col">
          {{!-- STR --}}
          <div class="attribute attribute-circle flexcol flex-group-center">
            <label for="system.attributes.strength.value" class="resource-label">STR</label>
            <input type="number" name="system.attributes.strength.value" value="{{system.attributes.strength.value}}" data-dtype="Number"/>
            <span class="attribute-mod">{{numberFormat system.attributes.strength.mod decimals=0 sign=true}}</span>
            <a class="attribute-roll rollable" data-attribute="strength" title="Roll Strength">
              <i class="fas fa-dice-d20"></i>
            </a>
          </div>
          {{!-- DEX --}}
          <div class="attribute attribute-circle flexcol flex-group-center">
            <label for="system.attributes.dexterity.value" class="resource-label">DEX</label>
            <input type="number" name="system.attributes.dexterity.value" value="{{system.attributes.dexterity.value}}" data-dtype="Number"/>
            <span class="attribute-mod">{{numberFormat system.attributes.dexterity.mod decimals=0 sign=true}}</span>
            <a class="attribute-roll rollable" data-attribute="dexterity" title="Roll Dexterity">
              <i class="fas fa-dice-d20"></i>
            </a>
          </div>
          {{!-- END --}}
          <div class="attribute attribute-circle flexcol flex-group-center">
            <label for="system.attributes.endurance.value" class="resource-label">END</label>
            <input type="number" name="system.attributes.endurance.value" value="{{system.attributes.endurance.value}}" data-dtype="Number"/>
            <span class="attribute-mod">{{numberFormat system.attributes.endurance.mod decimals=0 sign=true}}</span>
            <a class="attribute-roll rollable" data-attribute="endurance" title="Roll Endurance">
              <i class="fas fa-dice-d20"></i>
            </a>
          </div>
          {{!-- AWR --}}
          <div class="attribute attribute-circle flexcol flex-group-center">
            <label for="system.attributes.awareness.value" class="resource-label">AWR</label>
            <input type="number" name="system.attributes.awareness.value" value="{{system.attributes.awareness.value}}" data-dtype="Number"/>
            <span class="attribute-mod">{{numberFormat system.attributes.awareness.mod decimals=0 sign=true}}</span>
            <a class="attribute-roll rollable" data-attribute="awareness" title="Roll Awareness">
              <i class="fas fa-dice-d20"></i>
            </a>
          </div>
          {{!-- INT --}}
          <div class="attribute attribute-circle flexcol flex-group-center">
            <label for="system.attributes.intelligence.value" class="resource-label">INT</label>
            <input type="number" name="system.attributes.intelligence.value" value="{{system.attributes.intelligence.value}}" data-dtype="Number"/>
            <span class="attribute-mod">{{numberFormat system.attributes.intelligence.mod decimals=0 sign=true}}</span>
            <a class="attribute-roll rollable" data-attribute="intelligence" title="Roll Intelligence">
              <i class="fas fa-dice-d20"></i>
            </a>
          </div>
          {{!-- CHA --}}
          <div class="attribute attribute-circle flexcol flex-group-center">
            <label for="system.attributes.charisma.value" class="resource-label">CHA</label>
            <input type="number" name="system.attributes.charisma.value" value="{{system.attributes.charisma.value}}" data-dtype="Number"/>
            <span class="attribute-mod">{{numberFormat system.attributes.charisma.mod decimals=0 sign=true}}</span>
            <a class="attribute-roll rollable" data-attribute="charisma" title="Roll Charisma">
              <i class="fas fa-dice-d20"></i>
            </a>
          </div>
          {{!-- LUCK --}}
          <div class="attribute attribute-circle flexcol flex-group-center">
            <label for="system.attributes.luck.value" class="resource-label">LUCK</label>
            <input type="number" name="system.attributes.luck.value" value="{{system.attributes.luck.value}}" data-dtype="Number"/>
            <span class="attribute-mod">{{numberFormat system.attributes.luck.mod decimals=0 sign=true}}</span>
            <a class="attribute-roll rollable" data-attribute="luck" title="Roll Luck">
              <i class="fas fa-dice-d20"></i>
            </a>
          </div>
          {{!-- COR --}}
          <div class="attribute attribute-circle flexcol flex-group-center">
            <label for="system.attributes.coordination.value" class="resource-label">COR</label>
            <input type="number" name="system.attributes.coordination.value" value="{{system.attributes.coordination.value}}" data-dtype="Number"/>
            <span class="attribute-mod">{{numberFormat system.attributes.coordination.mod decimals=0 sign=true}}</span>
            <a class="attribute-roll rollable" data-attribute="coordination" title="Roll Coordination">
              <i class="fas fa-dice-d20"></i>
            </a>
          </div>
        </div>
      </div>

      {{!-- Skills --}}
      <div class="skills">
        <h3 class="items-header">
          <span>Skills</span>
          <a class="item-control item-create" data-type="skill" title="Create skill">
            <i class="fas fa-plus"></i>
          </a>
        </h3>
        <ol class="items-list">
          <li class="item flexrow item-header">
            <div class="item-name">Name</div>
            <div class="item-controls">Governing Attribute</div>
            <div class="item-controls">Ranks</div>
            <div class="item-controls">Total Bonus</div>
            <div class="item-controls">Controls</div>
          </li>
          {{#each skills as |item id|}}
          <li class="item flexrow" data-item-id="{{item._id}}">
            <div class="item-name">
              <h4>{{item.name}}</h4>
            </div>
            <div class="item-controls">
              <select name="items.{{item._id}}.system.governingAttribute" data-item-id="{{item._id}}" class="skill-attribute-select">
                <option value="strength" {{#if (eq item.system.governingAttribute "strength")}}selected{{/if}}>STR</option>
                <option value="dexterity" {{#if (eq item.system.governingAttribute "dexterity")}}selected{{/if}}>DEX</option>
                <option value="endurance" {{#if (eq item.system.governingAttribute "endurance")}}selected{{/if}}>END</option>
                <option value="awareness" {{#if (eq item.system.governingAttribute "awareness")}}selected{{/if}}>AWR</option>
                <option value="intelligence" {{#if (eq item.system.governingAttribute "intelligence")}}selected{{/if}}>INT</option>
                <option value="charisma" {{#if (eq item.system.governingAttribute "charisma")}}selected{{/if}}>CHA</option>
                <option value="luck" {{#if (eq item.system.governingAttribute "luck")}}selected{{/if}}>LUCK</option>
                <option value="coordination" {{#if (eq item.system.governingAttribute "coordination")}}selected{{/if}}>COR</option>
              </select>
            </div>
            <div class="item-controls">
              <input type="number" name="items.{{item._id}}.system.ranks" value="{{item.system.ranks}}" data-item-id="{{item._id}}" class="skill-ranks-input" data-dtype="Number"/>
            </div>
            <div class="item-controls">
              {{numberFormat item.system.totalModifier decimals=0 sign=true}}
            </div>
            <div class="item-controls">
              <a class="item-control item-roll" data-roll-type="skill" title="Roll skill"><i class="fas fa-dice-d20"></i></a>
              <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
              <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
          </li>
          {{/each}}
        </ol>
      </div>

      {{!-- Talents --}}
      <div class="talents">
        <h3 class="items-header">
          <span>Talents</span>
          <a class="item-control item-create" data-type="talent" title="Create talent">
            <i class="fas fa-plus"></i>
          </a>
        </h3>
        <ol class="items-list">
          {{#each talents as |item id|}}
          <li class="item flexrow" data-item-id="{{item._id}}">
            <div class="item-name">
              <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
              <h4>{{item.name}}</h4>
            </div>
            <div class="item-controls">
              <a class="item-control item-roll" data-roll-type="talent" title="Use talent"><i class="fas fa-magic"></i></a>
              <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
              <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
          </li>
          {{/each}}
        </ol>
      </div>

      {{!-- Features --}}
      <div class="features">
        <h3 class="items-header">
          <span>Features</span>
          <a class="item-control item-create" data-type="feature" title="Create feature">
            <i class="fas fa-plus"></i>
          </a>
        </h3>
        <ol class="items-list">
          {{#each features as |item id|}}
          <li class="item flexrow" data-item-id="{{item._id}}">
            <div class="item-name">
              <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
              <h4>{{item.name}}</h4>
            </div>
            <div class="item-controls">
              <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
              <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
          </li>
          {{/each}}
        </ol>
      </div>

    </div>

    {{!-- Inventory Tab --}}
    <div class="tab inventory" data-group="primary" data-tab="inventory">
      
      {{!-- Weapons --}}
      <div class="weapons">
        <h3 class="items-header">
          <span>Weapons</span>
          <a class="item-control item-create" data-type="weapon" title="Create weapon">
            <i class="fas fa-plus"></i>
          </a>
        </h3>
        <ol class="items-list">
          <li class="item flexrow item-header">
            <div class="item-name">Name</div>
            <div class="item-controls">Damage</div>
            <div class="item-controls">Range</div>
            <div class="item-controls">AP</div>
            <div class="item-controls">Controls</div>
          </li>
          {{#each weapons as |item id|}}
          <li class="item flexrow" data-item-id="{{item._id}}">
            <div class="item-name">
              <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
              <h4>{{item.name}}</h4>
            </div>
            <div class="item-controls">
              {{#each item.system.damage.parts as |part|}}
                {{part.[0]}} {{part.[1]}}
              {{/each}}
            </div>
            <div class="item-controls">
              {{#if item.system.range.value}}{{item.system.range.value}}{{item.system.range.units}}{{/if}}
            </div>
            <div class="item-controls">{{item.system.actionCost}}</div>
            <div class="item-controls">
              <a class="item-control item-roll" data-roll-type="attack" title="Attack"><i class="fas fa-sword"></i></a>
              <a class="item-control item-roll" data-roll-type="damage" title="Damage"><i class="fas fa-tint"></i></a>
              <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
              <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
          </li>
          {{/each}}
        </ol>
      </div>

      {{!-- Armor --}}
      <div class="armor">
        <h3 class="items-header">
          <span>Armor</span>
          <a class="item-control item-create" data-type="armor" title="Create armor">
            <i class="fas fa-plus"></i>
          </a>
        </h3>
        <ol class="items-list">
          {{#each armor as |item id|}}
          <li class="item flexrow" data-item-id="{{item._id}}">
            <div class="item-name">
              <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
              <h4>{{item.name}}</h4>
            </div>
            <div class="item-controls">
              <label>Equipped: <input type="checkbox" name="items.{{item._id}}.system.equipped" {{checked item.system.equipped}}/></label>
            </div>
            <div class="item-controls">
              Defense: {{item.system.defense.value}}
            </div>
            <div class="item-controls">
              <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
              <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
          </li>
          {{/each}}
        </ol>
      </div>

      {{!-- Equipment --}}
      <div class="equipment">
        <h3 class="items-header">
          <span>Equipment</span>
          <a class="item-control item-create" data-type="equipment" title="Create equipment">
            <i class="fas fa-plus"></i>
          </a>
        </h3>
        <ol class="items-list">
          {{#each gear as |item id|}}
          <li class="item flexrow" data-item-id="{{item._id}}">
            <div class="item-name">
              <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
              <h4>{{item.name}}</h4>
            </div>
            <div class="item-controls">
              Qty: {{item.system.quantity}}
            </div>
            <div class="item-controls">
              {{item.system.weight}} lbs
            </div>
            <div class="item-controls">
              <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
              <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
          </li>
          {{/each}}
        </ol>
      </div>

    </div>

    {{!-- Spells Tab --}}
    <div class="tab spells" data-group="primary" data-tab="spells">
      {{!-- Magic Sources --}}
      <div class="magic-sources">
        <h3>Magic Sources</h3>
        <div class="grid grid-5col">
          <label><input type="checkbox" name="system.magicSources.arcane" {{checked system.magicSources.arcane}}/> Arcane</label>
          <label><input type="checkbox" name="system.magicSources.divine" {{checked system.magicSources.divine}}/> Divine</label>
          <label><input type="checkbox" name="system.magicSources.occult" {{checked system.magicSources.occult}}/> Occult</label>
          <label><input type="checkbox" name="system.magicSources.primal" {{checked system.magicSources.primal}}/> Primal</label>
          <label><input type="checkbox" name="system.magicSources.psionic" {{checked system.magicSources.psionic}}/> Psionic</label>
        </div>
      </div>

      <h3 class="items-header">
        <span>Spells</span>
        <a class="item-control item-create" data-type="spell" title="Create spell">
          <i class="fas fa-plus"></i>
        </a>
      </h3>

      {{#each spells as |spellList source|}}
        {{#if spellList.length}}
        <div class="spell-list">
          <h4>{{titleCase source}} Spells</h4>
          <ol class="items-list">
            {{#each spellList as |item id|}}
            <li class="item flexrow" data-item-id="{{item._id}}">
              <div class="item-name">
                <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
                <h4>{{item.name}}</h4>
              </div>
              <div class="item-controls">
                Level {{item.system.level}}
              </div>
              <div class="item-controls">
                AP: {{item.system.actionCost}}
              </div>
              <div class="item-controls">
                <a class="item-control item-roll" data-roll-type="spell" title="Cast spell"><i class="fas fa-magic"></i></a>
                <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
              </div>
            </li>
            {{/each}}
          </ol>
        </div>
        {{/if}}
      {{/each}}
    </div>

    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="biography">
      <div class="grid grid-2col">
        <div class="left">
          <div class="form-group">
            <label>Appearance</label>
            <textarea name="system.biography.appearance" rows="4">{{system.biography.appearance}}</textarea>
          </div>
          <div class="form-group">
            <label>Background Description</label>
            <textarea name="system.background.description" rows="4">{{system.background.description}}</textarea>
          </div>
        </div>
        <div class="right">
          <div class="form-group">
            <label>Backstory</label>
            <textarea name="system.biography.backstory" rows="4">{{system.biography.backstory}}</textarea>
          </div>
          <div class="form-group">
            <label>Goals</label>
            <textarea name="system.biography.goals" rows="4">{{system.biography.goals}}</textarea>
          </div>
        </div>
      </div>
      <div class="form-group">
        <label>Notes</label>
        {{editor system.notes target="system.notes" button=true owner=owner editable=editable}}
      </div>
    </div>

  </section>
</form>