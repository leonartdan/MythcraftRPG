{{!-- Attributes Section --}}
<div class="attributes">
  <h3>Attributes</h3>
  <div class="grid grid-4col">
    {{#each system.attributes as |attribute key|}}
    <div class="attribute flexrow flex-group-center">
      <label for="system.attributes.{{key}}.value" class="resource-label">{{capitalize key}}</label>
      <input type="number" name="system.attributes.{{key}}.value" value="{{attribute.value}}" data-dtype="Number"/>
      <span class="attribute-mod">{{numberFormat attribute.mod decimals=0 sign=true}}</span>
      <a class="attribute-roll rollable" data-attribute="{{key}}" title="Roll {{capitalize key}}">
        <i class="fas fa-dice-d20"></i>
      </a>
    </div>
    {{/each}}
  </div>
</div>