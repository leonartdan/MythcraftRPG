{{!-- Actor Items Partial --}}
<div class="equipment-section">
  
  {{!-- Weapons --}}
  <div class="weapons">
    <h3 class="items-header">
      <span>Weapons</span>
      <a class="item-control item-create" data-type="weapon" title="Create weapon">
        <i class="fas fa-plus"></i>
      </a>
    </h3>
    <ol class="items-list">
      <li class="item flexrow item-header">
        <div class="item-name">Name</div>
        <div class="item-controls">Damage</div>
        <div class="item-controls">Range</div>
        <div class="item-controls">AP</div>
        <div class="item-controls">Actions</div>
      </li>
      {{#each weapons as |item id|}}
      <li class="item flexrow" data-item-id="{{item._id}}">
        <div class="item-name">
          <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
          <h4>{{item.name}}</h4>
          <p class="item-type">{{capitalize item.system.weaponType}}</p>
        </div>
        <div class="item-controls">
          {{#each item.system.damage.parts as |part|}}
            {{part.[0]}} {{part.[1]}}{{#unless @last}}, {{/unless}}
          {{/each}}
        </div>
        <div class="item-controls">
          {{#if item.system.range.value}}{{item.system.range.value}} {{item.system.range.units}}{{else}}Melee{{/if}}
        </div>
        <div class="item-controls">{{apCost item.system.actionCost}}</div>
        <div class="item-controls">
          <a class="item-control item-roll" data-roll-type="attack" title="Attack Roll"><i class="fas fa-dice-d20"></i></a>
          <a class="item-control item-roll" data-roll-type="damage" title="Damage Roll"><i class="fas fa-dice"></i></a>
          <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
        </div>
      </li>
      {{/each}}
    </ol>
  </div>

  {{!-- Armor --}}
  <div class="armor">
    <h3 class="items-header">
      <span>Armor</span>
      <a class="item-control item-create" data-type="armor" title="Create armor">
        <i class="fas fa-plus"></i>
      </a>
    </h3>
    <ol class="items-list">
      {{#each armor as |item id|}}
      <li class="item flexrow" data-item-id="{{item._id}}">
        <div class="item-name">
          <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
          <h4>{{item.name}}</h4>
          <p class="item-type">{{capitalize item.system.type.value}}</p>
        </div>
        <div class="item-controls">
          <label class="checkbox">
            <input type="checkbox" name="items.{{item._id}}.system.equipped" {{checked item.system.equipped}}/>
            Equipped
          </label>
        </div>
        <div class="item-controls">
          Defense: {{item.system.defense.value}}
        </div>
        <div class="item-controls">
          <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
        </div>
      </li>
      {{/each}}
    </ol>
  </div>

  {{!-- Equipment --}}
  <div class="equipment">
    <h3 class="items-header">
      <span>Equipment</span>
      <a class="item-control item-create" data-type="equipment" title="Create equipment">
        <i class="fas fa-plus"></i>
      </a>
    </h3>
    <ol class="items-list">
      {{#each gear as |item id|}}
      <li class="item flexrow" data-item-id="{{item._id}}">
        <div class="item-name">
          <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></div>
          <h4>{{item.name}}</h4>
        </div>
        <div class="item-controls">
          Qty: {{item.system.quantity}}
        </div>
        <div class="item-controls">
          {{formatWeight item.system.weight}}
        </div>
        <div class="item-controls">
          {{formatCost item.system.cost.value item.system.cost.denomination}}
        </div>
        <div class="item-controls">
          <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
        </div>
      </li>
      {{/each}}
    </ol>
  </div>

</div>