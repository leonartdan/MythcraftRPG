<form class="{{cssClass}} {{item.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Spell Name"/></h1>
      <div class="item-subtitle">{{spellLevel system.level}} {{capitalize system.magicSource}} Spell</div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="details">Details</a>
    <a class="item" data-tab="effects">Effects</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Description Tab --}}
    <div class="tab description" data-group="primary" data-tab="description">
      <div class="form-group">
        <label>Description</label>
        {{editor system.description target="system.description" button=true owner=owner editable=editable}}
      </div>
    </div>

    {{!-- Details Tab --}}
    <div class="tab details" data-group="primary" data-tab="details">
      
      {{!-- Spell Level and Source --}}
      <div class="grid grid-2col">
        <div class="form-group">
          <label>Spell Level</label>
          <input type="number" name="system.level" value="{{system.level}}" data-dtype="Number" min="0" max="9"/>
        </div>
        <div class="form-group">
          <label>Magic Source</label>
          <select name="system.magicSource">
            {{#select system.magicSource}}
            <option value="arcane">Arcane</option>
            <option value="divine">Divine</option>
            <option value="occult">Occult</option>
            <option value="primal">Primal</option>
            <option value="psionic">Psionic</option>
            {{/select}}
          </select>
        </div>
      </div>

      {{!-- School and Action Cost --}}
      <div class="grid grid-2col">
        <div class="form-group">
          <label>School</label>
          <select name="system.school">
            {{#select system.school}}
            <option value="">—</option>
            <option value="abjuration">Abjuration</option>
            <option value="conjuration">Conjuration</option>
            <option value="divination">Divination</option>
            <option value="enchantment">Enchantment</option>
            <option value="evocation">Evocation</option>
            <option value="illusion">Illusion</option>
            <option value="necromancy">Necromancy</option>
            <option value="transmutation">Transmutation</option>
            {{/select}}
          </select>
        </div>
        <div class="form-group">
          <label>Action Point Cost</label>
          <input type="number" name="system.actionCost" value="{{system.actionCost}}" data-dtype="Number" min="0"/>
        </div>
      </div>

      {{!-- Components --}}
      <div class="form-group">
        <label>Components</label>
        <div class="spell-components">
          <label><input type="checkbox" name="system.components.verbal" {{checked system.components.verbal}}/> Verbal (V)</label>
          <label><input type="checkbox" name="system.components.somatic" {{checked system.components.somatic}}/> Somatic (S)</label>
          <label><input type="checkbox" name="system.components.material" {{checked system.components.material}}/> Material (M)</label>
          <label><input type="checkbox" name="system.components.focus" {{checked system.components.focus}}/> Focus (F)</label>
        </div>
      </div>

      {{!-- Material Components --}}
      {{#if system.components.material}}
      <div class="form-group">
        <label>Material Components</label>
        <input type="text" name="system.materials.value" value="{{system.materials.value}}" placeholder="Component description"/>
        <div class="grid grid-3col">
          <div>
            <label class="checkbox">
              <input type="checkbox" name="system.materials.consumed" {{checked system.materials.consumed}}/>
              Consumed
            </label>
          </div>
          <div>
            <label>Cost (gp)</label>
            <input type="number" name="system.materials.cost" value="{{system.materials.cost}}" data-dtype="Number"/>
          </div>
          <div>
            <label>Supply</label>
            <input type="number" name="system.materials.supply" value="{{system.materials.supply}}" data-dtype="Number"/>
          </div>
        </div>
      </div>
      {{/if}}

      {{!-- Range and Target --}}
      <div class="grid grid-2col">
        <div class="form-group">
          <label>Range</label>
          <div class="flexrow">
            <input type="number" name="system.range.value" value="{{system.range.value}}" data-dtype="Number"/>
            <select name="system.range.units">
              {{#select system.range.units}}
              <option value="self">Self</option>
              <option value="touch">Touch</option>
              <option value="ft">Feet</option>
              <option value="mi">Miles</option>
              <option value="spec">Special</option>
              {{/select}}
            </select>
          </div>
        </div>
        <div class="form-group">
          <label>Target</label>
          <select name="system.target.type">
            {{#select system.target.type}}
            <option value="">—</option>
            <option value="self">Self</option>
            <option value="creature">Creature</option>
            <option value="ally">Ally</option>
            <option value="enemy">Enemy</option>
            <option value="object">Object</option>
            <option value="space">Space</option>
            <option value="radius">Radius</option>
            <option value="sphere">Sphere</option>
            <option value="cylinder">Cylinder</option>
            <option value="cone">Cone</option>
            <option value="cube">Cube</option>
            <option value="line">Line</option>
            <option value="wall">Wall</option>
            {{/select}}
          </select>
        </div>
      </div>

      {{!-- Target Area --}}
      {{#if (or (eq system.target.type "radius") (eq system.target.type "sphere") (eq system.target.type "cylinder") (eq system.target.type "cone") (eq system.target.type "cube") (eq system.target.type "line"))}}
      <div class="grid grid-2col">
        <div class="form-group">
          <label>Area Size</label>
          <input type="number" name="system.target.value" value="{{system.target.value}}" data-dtype="Number"/>
        </div>
        <div class="form-group">
          <label>Units</label>
          <select name="system.target.units">
            {{#select system.target.units}}
            <option value="ft">Feet</option>
            <option value="mi">Miles</option>
            {{/select}}
          </select>
        </div>
      </div>
      {{/if}}

      {{!-- Duration --}}
      <div class="form-group">
        <label>Duration</label>
        <input type="text" name="system.duration" value="{{system.duration}}" placeholder="e.g., Instantaneous, 1 hour, Concentration"/>
      </div>

    </div>

    {{!-- Effects Tab --}}
    <div class="tab effects" data-group="primary" data-tab="effects">
      
      {{!-- Action Type --}}
      <div class="form-group">
        <label>Action Type</label>
        <select name="system.actionType">
          {{#select system.actionType}}
          <option value="spell">Spell</option>
          <option value="attack">Spell Attack</option>
          <option value="save">Saving Throw</option>
          <option value="heal">Healing</option>
          <option value="util">Utility</option>
          {{/select}}
        </select>
      </div>

      {{!-- Attack Roll --}}
      {{#if (eq system.actionType "attack")}}
      <div class="form-group">
        <label>Attack Bonus</label>
        <input type="text" name="system.attackBonus" value="{{system.attackBonus}}" placeholder="@attributes.intelligence.mod"/>
      </div>
      {{/if}}

      {{!-- Saving Throw --}}
      {{#if (eq system.actionType "save")}}
      <div class="grid grid-3col">
        <div class="form-group">
          <label>Save Attribute</label>
          <select name="system.save.ability">
            {{#select system.save.ability}}
            <option value="">—</option>
            <option value="strength">Strength</option>
            <option value="dexterity">Dexterity</option>
            <option value="endurance">Endurance</option>
            <option value="intelligence">Intelligence</option>
            <option value="awareness">Awareness</option>
            <option value="coordination">Coordination</option>
            <option value="willpower">Willpower</option>
            <option value="presence">Presence</option>
            {{/select}}
          </select>
        </div>
        <div class="form-group">
          <label>Save DC</label>
          <input type="number" name="system.save.dc" value="{{system.save.dc}}" data-dtype="Number"/>
        </div>
        <div class="form-group">
          <label>DC Scaling</label>
          <select name="system.save.scaling">
            {{#select system.save.scaling}}
            <option value="spell">Spell DC</option>
            <option value="flat">Flat Value</option>
            {{/select}}
          </select>
        </div>
      </div>
      {{/if}}

      {{!-- Damage --}}
      <div class="form-group">
        <label>Damage/Healing</label>
        <ol class="damage-parts">
          {{#each system.damage.parts as |part index|}}
          <li class="damage-part flexrow">
            <input type="text" name="system.damage.parts.{{index}}.0" value="{{part.[0]}}" placeholder="1d6"/>
            <select name="system.damage.parts.{{index}}.1">
              {{#select part.[1]}}
              <option value="healing">Healing</option>
              <option value="bludgeoning">Bludgeoning</option>
              <option value="piercing">Piercing</option>
              <option value="slashing">Slashing</option>
              <option value="fire">Fire</option>
              <option value="cold">Cold</option>
              <option value="lightning">Lightning</option>
              <option value="acid">Acid</option>
              <option value="poison">Poison</option>
              <option value="psychic">Psychic</option>
              <option value="necrotic">Necrotic</option>
              <option value="radiant">Radiant</option>
              {{/select}}
            </select>
            <a class="damage-control" data-action="delete" data-index="{{index}}" title="Delete Damage">
              <i class="fas fa-trash"></i>
            </a>
          </li>
          {{/each}}
          <li class="damage-part">
            <a class="damage-control" data-action="add" title="Add Damage/Healing">
              <i class="fas fa-plus"></i> Add Effect
            </a>
          </li>
        </ol>
      </div>

      {{!-- Other Formula --}}
      <div class="form-group">
        <label>Other Formula</label>
        <input type="text" name="system.formula" value="{{system.formula}}" placeholder="Additional roll formula"/>
      </div>

      {{!-- Chat Flavor --}}
      <div class="form-group">
        <label>Chat Flavor</label>
        <input type="text" name="system.chatFlavor" value="{{system.chatFlavor}}" placeholder="Additional text for chat"/>
      </div>

      {{!-- Action Button --}}
      <div class="form-group">
        <div class="form-fields">
          <button type="button" class="rollable" data-roll-type="spell">
            <i class="fas fa-magic"></i> Cast {{item.name}}
          </button>
        </div>
      </div>

    </div>

  </section>
</form>